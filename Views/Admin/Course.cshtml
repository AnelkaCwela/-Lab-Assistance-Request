@model IEnumerable<CourseModel>
<h6 class="text-center">
  Course List
</h6>

<hr />
@if (Model.Any())
{
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Course Id</th>
                <th>Course Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var dat in Model)
            {
                <tr>

                    <td>
                        <p class="fw-normal mb-1">@dat.CourseId</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@dat.CourseName</p>
                    </td>

                        <td>
                            <a asp-route-Id="@dat.CourseId" asp-action="EditCourse" class="btn btn-sm btn-info ">Edit</a>
                        </td>
                    
                </tr>
            }



        </tbody>


    </table>
}
else
{
    <div class="card">
        <div class="card-body">The is no data to show</div>
    </div>
}

@model StudentAssistanceModel
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.FirstName  @Model.LastName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Staff Number</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.StaffNumber</p>
                            </div>
                        </div>
                       
                    </div>
                </div>
           
            </div>
        </div>
    </div>
</section>
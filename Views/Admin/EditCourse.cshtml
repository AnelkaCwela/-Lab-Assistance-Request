@model CourseModel
@{
    ViewData["Title"] = "Update Course";
}
<h4 class="text-center">Update Course</h4>
<hr />
@if (ViewBag.Data != null)
{
    <h4 class="text-center alert alert-success alert-heading"> @ViewBag.Data</h4>
}
<form asp-action="EditCourse" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden"
           asp-for="CourseId"/>
    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                <label class="form-label" for="form3Example1">Course Name</label>
                <input asp-for="CourseName" placeholder="Course Name" required id="form3Example1" class="form-control" />

                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Update</button>
</form>

@model IEnumerable<RequestViewModel>
<h6 class="text-center">
    Request List
</h6>
<form asp-action="request" method="post">
    <label class="form-label" for="form3Example3">Date Range</label>
    <span>
        <span>Start Date</span> <input required type="date" name="StartDate" /> <span>End Date</span>
        <input type="datetime-local" required name="EndDate" />
    </span>
    <div class="dropdown">
        <label class="form-label" for="form3Example3">Statuse</label>
        <span>
            <select required name="Statuse" class="dropdown-item alert alert-primary small">
                <option value="1">Active</option>
                <option value="2">In Active</option>
            </select>
        </span>
    </div>
    <input class="btn btn-primary btn-sm" type="submit" value="Search" />
</form>
<hr />
@if (Model.Any())
{
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Student Number</th>
                <th>Request Desc</th>
                <th>Request Time</th>
                <th>Statuse</th>
                <th>Computer</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var dat in Model)
            {
            <tr>
                <td>
                    <p class="fw-normal mb-1">@dat.StudentModel.FirstName</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@dat.StudentModel.LastName</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@dat.StudentModel.StudentNumber</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@dat.requestModel.RequestDescription</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@dat.requestModel.RequestTime.ToString("HH:mm")</p>
                </td>
                @if (dat.requestModel.Statuse == false)
                {
                    <td>
                        <span class="badge badge-danger rounded-pill d-inline">In Active</span>
                    </td>

                }
                else
                {
                    <td>
                        <span class="badge badge-success rounded-pill d-inline">Active</span>
                    </td>
                }
                <td>
                    <p class="fw-normal mb-1">@dat.ComputerModel.ComputerNo</p>
                </td>
                    <td>
                        <a asp-route-Id="@dat.requestModel.RequestId" asp-action="Profile" asp-controller="Admin" class="btn btn-info btn-sm">Student Assistance</a>
                    </td>

            </tr>
            }



        </tbody>


    </table>
}
else
{
    <div class="card">
        <div class="card-body">The is no data to show</div>
    </div>
}
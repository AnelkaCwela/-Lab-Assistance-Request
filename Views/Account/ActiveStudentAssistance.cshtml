@model IEnumerable<StudentAssistanceModel>
<p></p>
<div class="align-content-center text-center">
    <a asp-action="InActiveStudentAssistance" asp-controller="Account" class="btn btn-sm btn-success">In Active</a>
    <a asp-action="StudentAssistance" asp-controller="Account" class="btn btn-sm btn-info">All</a>
</div>
    <hr />
    <h6 class="text-center card-header">
       Active Student Assistance 
    </h6>
    @if (Model.Any())
    {
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>StaffNumber</th>
                    <th>Status</th>

                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var dat in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="~/images/profile.jpg"
                                     alt=""
                                     style="width: 45px; height: 45px"
                                     class="rounded-circle" />
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@dat.FirstName</p>
                                    <p class="fw-bold mb-1">@dat.LastName</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@dat.Email</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@dat.StaffNumber</p>
                        </td>
                        @if (dat.Statuse == true)
                        {
                            <td>
                                <span class="badge badge-success rounded-pill d-inline">Active</span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="badge badge-danger rounded-pill d-inline">In Active</span>
                            </td>
                        }
                        @if (dat.Statuse == true)
                        {
                            <td>
                                <a asp-action="StudentStatuse" asp-route-Id="@dat.StudentAssistanceId" asp-route-statuse="@dat.Statuse" asp-controller="Account" class="btn btn-danger btn-sm">De Active</a>
                            </td>
                        }
                        else
                        {
                            <td>
                                <a asp-action="StudentStatuse" asp-route-Id="@dat.StudentAssistanceId" asp-route-statuse="@dat.Statuse" asp-controller="Account" class="btn btn-info btn-sm">Active</a>
                            </td>
                        }

                    </tr>
                }



            </tbody>


        </table>
    }
    else
    {
        <div class="card-body">
            <div class="card-header">The is no data to show</div>
        </div>
    }

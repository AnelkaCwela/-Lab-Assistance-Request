@model RegisterUserModel
@{
    ViewData["Title"] = "Register";
}
<h4 class="text-center">Register</h4>
<hr />
<form asp-action="Register" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                <label class="form-label" for="form3Example1">First name</label>
                <input asp-for="FirstName" placeholder="First Name" required id="form3Example1" class="form-control" />

                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-outline">
                <label class="form-label" for="form3Example2">Last name</label>
                <input asp-for="LastName" placeholder="Last Name" required id="form3Example2" class="form-control" />

                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <!-- Email input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="form3Example3">Email address</label>
        <input asp-for="Email" placeholder="Email Address" required id="form3Example3" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-outline mb-4">
        <label class="form-label" for="form3Example3">Staff Number</label>
        <input asp-for="StuffNumber" placeholder="Satff Number" required id="form3Example3" class="form-control" />
        <span asp-validation-for="StuffNumber" class="text-danger"></span>
    </div>
    
    
    <div class="dropdown">
        <label class="form-label" for="form3Example3">Role</label>
        <span> <select required asp-for="RoleId" class="dropdown-item alert alert-primary small" asp-items=" ViewBag.RoleId"></select></span>
        <span asp-validation-for="RoleId" class="text-danger"></span>

    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
</form>
